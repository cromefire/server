    "@adonisjs/encryption": "~4.0.5",
    "@adonisjs/http-server": "~5.5.5",
    "@adonisjs/lucid": "~15.0.3",
    "@adonisjs/mail": "~7.2.3",
    "@adonisjs/persona": "~1.0.5",
    "@adonisjs/repl": "~3.1.5",
    "@adonisjs/session": "~6.1.1",
    "@adonisjs/shield": "~7.0.5",
    "@adonisjs/validator": "~12.0.0",
    "@adonisjs/view": "~6.0.8",
