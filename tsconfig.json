{
  "baseUrl": ".",
  "compilerOptions": {
    "strict": false,
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "incremental": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "build",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "officialrecipes",
    "docs",
    "public"
  ],
  "paths": {
    "App/*": [
      "./app/*"
    ],
    "Config/*": [
      "./config/*"
    ],
    "Contracts/*": [
      "./contracts/*"
    ],
    "Database/*": [
      "./database/*"
    ]
  }
}
