{
  "extends": "./node_modules/adonis-preset-ts/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "officialrecipes",
    "docs",
    "public"
  ]
}
